generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  password  String
  name      String
  role      Role        @default(USER)
  taskBoard TaskBoard[] @relation("UserTasks")
}

model TaskBoard {
  id          String  @id @default(uuid())
  title       String
  description String?
  ownerId     Int
  owner       User    @relation("UserTasks", fields: [ownerId], references: [id])
  tasks       Task[]  @relation("TaskBoardTasks")
}

model Task {
  id          String    @id @default(uuid())
  title       String
  description String?
  taskBoardId String
  isComplete  Boolean   @default(false)
  taskBoard   TaskBoard @relation("TaskBoardTasks", fields: [taskBoardId], references: [id])
}

enum Role {
  ADMIN
  USER
}
